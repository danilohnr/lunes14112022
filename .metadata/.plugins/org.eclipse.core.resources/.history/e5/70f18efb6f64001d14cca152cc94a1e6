package poo;

public class Persona {
	private String Nombre;
	private int Edad;
	private char Sexo;
	private boolean Asistencias;
	
	private final String NOMBRES_ALUMNOS= {"Juan", "Fernando", "Josue"};
	private final String NOMBRES_ALUMNAS= {"Tania", "Jennifer", "Jessica", "Rebecca"};
	
	
	
	
	
	
	
	
	public Persona(String nombre, int edad, char sexo, boolean asistencias) {
		super();
		Nombre = nombre;
		Edad = edad;
		Sexo = sexo;
		Asistencias = asistencias;
	}
	public String getNombre() {
		return Nombre;
	}
	public void setNombre(String nombre) {
		Nombre = nombre;
	}
	public int getEdad() {
		return Edad;
	}
	public void setEdad(int edad) {
		Edad = edad;
	}
	public char getSexo() {
		return Sexo;
	}
	public void setSexo(char sexo) {
		Sexo = sexo;
	}
	public boolean isAsistencias() {
		return Asistencias;
	}
	public void setAsistencias(boolean asistencias) {
		Asistencias = asistencias;
	}
	@Override
	public String toString() {
		return "Nombre: " + Nombre + ""
				+ "Edad=" + Edad + ""
				+ "Sexo=" + Sexo + ""
				+ "Asistencias=" + Asistencias;
	}
	
	
	

}
